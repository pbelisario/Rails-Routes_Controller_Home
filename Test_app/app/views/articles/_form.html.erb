<% # Arquivo criado para retirar as redundancias do codigo HTML %>
<% # Presentes nos arquivos edit e new %>

<%= render 'shared/errors', obj: @article %>

<div class = 'row'>
  <div class = 'col-xs-12'>
    <% # @article foi inicializado no articles_controller new %>
    <% # form_for e' uma funcao do rails que facilita a criacao %>
    <% # de GUI para entradas do usua'rio %>
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |variable_name| %>
      <div class = "form-group">
        <div class = "control-label col-sm-2">
          <%= variable_name.label :title %>  
        </div>
        <div class = "col-sm-8">
          <%= variable_name.text_field :title, class: "form-control", placeholder: "Title of the article", autofocus: true %>
        </div>
      </div>
      
      <div class = "form-group">
        <div class = "control-label col-sm-2">
          <%= variable_name.label :description %>  
        </div>  
        <div class = "col-sm-8">
          <%= variable_name.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>  
        </div>
      </div>
    
      <div class = "form-group">
        <div class = "col-sm-offset-2 col-sm-10">
          <%= variable_name.submit class: 'btn btn-primary btn-lg' %>
        </div>  
      </div>

    <% end %>

    <div class = "col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
    </div>
    
  </div>
  
</div>

